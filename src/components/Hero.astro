<script>
  // Mouse parallax for the .parallax-image 
  const intensity = 15;

  let onMove: ((event: MouseEvent) => void) | null = null;
  let onLeave: ((event: MouseEvent) => void) | null = null;

  const attachParallax = () => {
    const el = document.querySelector<HTMLElement>('.parallax-image');
    if (!el) return;

    onMove = (event: MouseEvent) => {
      const rect = el.getBoundingClientRect();
      const x = event.clientX - (rect.left + rect.width / 2);
      const y = event.clientY - (rect.top + rect.height / 2);
      el.style.transform = `translate(${x / intensity}px, ${y / intensity}px)`;
    };

    onLeave = () => {
      el.style.transform = '';
    };

    el.addEventListener('mousemove', onMove);
    el.addEventListener('mouseleave', onLeave);
  };

  const detachParallax = () => {
    const el = document.querySelector<HTMLElement>('.parallax-image');
    if (!el) return;
    if (onMove) el.removeEventListener('mousemove', onMove);
    if (onLeave) el.removeEventListener('mouseleave', onLeave);
    onMove = onLeave = null;
  };

  // Initial mount
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', attachParallax, { once: true });
  } else {
    attachParallax();
  }

  // Handle Astro client-side page swaps (view transitions)
  document.addEventListener('astro:before-swap', detachParallax);
  document.addEventListener('astro:after-swap', () => {
    // wait for new DOM
    requestAnimationFrame(attachParallax);
  });
</script>
