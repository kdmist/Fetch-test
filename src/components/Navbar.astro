---

type NavItem = { title: string; desc: string; href: string };

const items: NavItem[] = [
  { title: 'Testimonials', desc: 'Hear what Users are Saying.', href: '#testimonials' },
  { title: 'For Work', desc: 'Manage leave and Payroll', href: '#work' },
  { title: 'For Family', desc: 'Manage family tasks more easier', href: '#family' },
  { title: 'For You', desc: 'Complete personal tasks.', href: '#personal' },
];

const Icon = {
  star: `<svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2l2.9 6.1L22 9.3l-5 4.8L18 22l-6-3.3L6 22l1-7.9-5-4.8 7.1-1.2L12 2z"/></svg>`,
  user: `<svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21a8 8 0 10-16 0"/><circle cx="12" cy="7" r="4"/></svg>`,
  brief: `<svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="7" width="20" height="14" rx="2"/><path d="M16 7V5a2 2 0 00-2-2h-4a2 2 0 00-2 2v2"/></svg>`,
  info: `<svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4M12 8h.01"/></svg>`,
  plus: `<svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 5v14M5 12h14"/></svg>`,
  cash: `<svg viewBox="0 0 24 24" width="16" height="16" fill="none" stroke="currentColor" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="5" width="20" height="14" rx="2"/><path d="M8 12h8M12 9v6"/></svg>`,
};
const icons = [Icon.star, Icon.user, Icon.brief, Icon.info, Icon.plus, Icon.cash];
---

<section class="fixed top-0 left-0 z-[80] w-full">
  <div class="mx-auto sm:px-4 px-1 sm:pt-6 pt-2 lg:px-0">
    <div class="flex items-center justify-between">
      <div class="lg:w-1/4 w-auto">
        <div class="flex flex-wrap items-center">
          <div class="w-auto mx-auto md:pr-2">
            <a href="/"><img src="/logo.png" class="md:w-60 w-28" alt="Zakayo" /></a>
          </div>
        </div>
      </div>

      <div class="flex items-center gap-3 md:gap-4 md:mr-12">
        <div class="navbar-menu-button z-50">
          <button
            id="zakayo-toggle"
            aria-controls="zakayo-navmenu"
            aria-expanded="false"
            class="nav-menu-button text-sm"
            type="button"
          >
            <div>
              <span class="inline-flex items-center gap-2">
                <span id="burger-icon" class="relative -ml-1 h-4 w-5">
                  <span class="absolute inset-x-0 top-0 h-[2.5px] bg-black rounded-full"></span>
                  <span class="absolute inset-x-0 top-[7px] h-[2.5px] bg-black rounded-full"></span>
                  <span class="absolute inset-x-0 top-[14px] h-[2.5px] bg-black rounded-full"></span>
                </span>
                <span id="burger-text" class="font-extrabold tracking-wide uppercase sm:text-sm text-xs">Menu</span>

                <span id="close-icon" class="hidden relative -ml-1 h-4 w-5">
                  <span class="absolute left-0 right-0 top-1/2 -translate-y-1/2 rotate-45 h-[2.5px] bg-black rounded-full"></span>
                  <span class="absolute left-0 right-0 top-1/2 -translate-y-1/2 -rotate-45 h-[2.5px] bg-black rounded-full"></span>
                </span>
                <span id="close-text" class="hidden font-extrabold tracking-wide uppercase sm:text-sm text-xs">
                  <span class="md:inline-block hidden">Close </span> Menu
                </span>
              </span>
            </div>
          </button>
        </div>

        <a href="/waitlist" class="my-menu-top-btn ml-2 md:ml-6" type="button">
          <div>
            <span class="inline-block md:hidden whitespace-nowrap" style="font-size: 11px;">JOIN WAITLIST</span>
            <span class="md:inline-block hidden">JOIN WAITLIST</span>
          </div>
          <svg fill="none" viewBox="0 0 24 24" height="25px" width="25px" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linejoin="round" stroke-linecap="round" stroke-miterlimit="10" stroke-width="2" stroke="black" d="M11.6801 14.62L14.2401 12.06L11.6801 9.5"></path>
            <path stroke-linejoin="round" stroke-linecap="round" stroke-miterlimit="10" stroke-width="2" stroke="black" d="M4 12.0601H14.17"></path>
            <path stroke-linejoin="round" stroke-linecap="round" stroke-miterlimit="10" stroke-width="2" stroke="black" d="M12 4C16.42 4 20 7 20 12C20 17 16.42 20 12 20"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>

  <div id="zakayo-overlay" class="fixed top-0 right-0 bg-transparent" hidden aria-hidden="true">
    <div class="relative mx-auto max-w-[1100px] px-4 pt-6 sm:pt-8 pb-8">
      <div class="relative">
        <div class="absolute left-6 right-6 -bottom-3 h-6 bg-black rounded-[28px]"></div>

        <nav
          id="zakayo-navmenu"
          class="relative rounded-[28px] border-4 border-black bg-white shadow-[10px_10px_0_0_#000] p-3 sm:p-4 md:p-6 mt-16"
          aria-label="Site"
        >
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 md:gap-5">
            {items.map((it, i) => (
              <a
                href={it.href}
                class="group block rounded-2xl border-4 border-[#E6DCCB] hover:border-black bg-[#F6EFE2] hover:bg-[#FFE7E7] shadow-[6px_6px_0_0_#000] p-5 md:p-6 transition-colors"
              >
                <div class="flex items-start gap-3 md:gap-4">
                  <span class="shrink-0 inline-flex items-center justify-center h-9 w-9 rounded-full border-4 border-black bg-white shadow-[4px_4px_0_0_#000] text-black">
                    <span set:html={icons[i % icons.length]} />
                  </span>
                  <div>
                    <h3 class="font-extrabold text-[1.05rem] md:text-lg leading-tight">{it.title}</h3>
                    <p class="mt-1 text-sm md:text-[15px] text-black/70">{it.desc}</p>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </nav>
      </div>
    </div>
  </div>
</section>

<script>
  let isOpen = false;

  const toggleEl = document.getElementById('zakayo-toggle') as HTMLButtonElement | null;
  const overlayEl = document.getElementById('zakayo-overlay') as HTMLElement | null;
  const menuEl = document.getElementById('zakayo-navmenu') as HTMLElement | null;


  const burgerIcon = document.getElementById('burger-icon') as HTMLElement | null;
  const burgerText = document.getElementById('burger-text') as HTMLElement | null;
  const closeIcon = document.getElementById('close-icon') as HTMLElement | null;
  const closeText = document.getElementById('close-text') as HTMLElement | null;

  const setOpen = (open: boolean) => {
    isOpen = open;
    toggleEl?.setAttribute('aria-expanded', String(open));
    if (overlayEl) {
      overlayEl.hidden = !open;
      overlayEl.setAttribute('aria-hidden', String(!open));
    }
    

    if (burgerIcon && burgerText && closeIcon && closeText) {
      burgerIcon.classList.toggle('hidden', open); 
      burgerText.classList.toggle('hidden', open); 

      closeIcon.classList.toggle('hidden', !open);
      closeText.classList.toggle('hidden', !open); 
    }
    
    // lock page scroll 
    document.documentElement.classList.toggle('overflow-hidden', open);
  };

  const toggle = () => setOpen(!isOpen);
  const close = () => setOpen(false);

  // Close on Escape
  const onKey = (e: KeyboardEvent) => {
    if (e.key === 'Escape') close();
  };

  // Close when clicking anywhere outside the menu or the toggle button 
  const onDocPointer = (e: Event) => {
    if (!isOpen) return;
    const target = e.target as Node;
    if (menuEl?.contains(target) || toggleEl?.contains(target)) return;
    close();
  };

  // Only close when clicking overlay background 
  const onOverlayClick = (e: MouseEvent) => {
    if (e.target === overlayEl) close();
  };

  const bind = () => {
    toggleEl?.addEventListener('click', toggle);
    window.addEventListener('keydown', onKey);
    document.addEventListener('pointerdown', onDocPointer, true);
    overlayEl?.addEventListener('click', onOverlayClick);
    setOpen(false); // initial state
  };

  const unbind = () => {
    toggleEl?.removeEventListener('click', toggle);
    window.removeEventListener('keydown', onKey);
    document.removeEventListener('pointerdown', onDocPointer, true);
    overlayEl?.removeEventListener('click', onOverlayClick);
    document.documentElement.classList.remove('overflow-hidden');
  };

  // mount
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', bind, { once: true });
  } else {
    bind();
  }

  // Astro client-side navigation support
  document.addEventListener('astro:before-swap', () => {
    setOpen(false);
    unbind();
  });
  document.addEventListener('astro:after-swap', bind);
</script>